#include<iostream>
using namespace std;
int main()
{
char array[7];
int n;
cout << "Enter a value of N" << endl;
cin >> n;
for (int i = 0; i < 7; i++)
{
cout << "Enter a character :";
cin >> array[i];

}
for (int j = 7; j<n+7 ; j++)
{
cout << array[j - n]<<"   ";

}
for (int k = 0; k < 7 - n; k++)
{
cout << array[k]<<"    ";
}
system("pause");
return 0;
}
